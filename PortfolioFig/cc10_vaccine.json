{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Vaccination Coverage with Year Slider",
    "title": {
      "text": "Vaccination Coverage by Year",
      "fontSize": 14,
      "anchor": "start"
    },
    "width": 700,
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/yantoniassi1/yantoniassi1.github.io/main/PortfolioData/cc10_vaccines.csv"
    },
    "transform": [
      {
        "filter": "datum.ano != null"
      }
    ],
    "layer": [
      {
        "mark": {
          "type": "line",
          "interpolate": "monotone"
        },
        "encoding": {
          "x": {
            "field": "ano",
            "type": "temporal",
            "title": "Year",
            "axis": {"format": "%Y"}
          },
          "y": {
            "field": "coverage",
            "type": "quantitative",
            "title": "Vaccination Coverage (%)"
          },
          "color": {
            "field": "vaccine",
            "type": "nominal",
            "title": "Vaccine"
          }
        }
      }
    ],
    "params": [
      {
        "name": "yearSelector",
        "value": 2020,
        "bind": {
          "input": "range",
          "min": 2010,
          "max": 2022,
          "step": 1,
          "name": "Select Year: "
        }
      }
    ],
    "transform": [
      {
        "filter": "year(datum.ano) == yearSelector"
      }
    ],
    "config": {
      "view": {"stroke": "transparent"},
      "axis": {
        "grid": true
      }
    }
  }
  