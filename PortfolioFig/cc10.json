{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Map of Brazil showing BCG vaccination rates by state",
    "title": {
      "text": "BCG Vaccination Coverage by State in Brazil",
      "fontSize": 14,
      "anchor": "start"
    },
    "width": 800,
    "height": 600,
    "projection": {
      "type": "mercator"
    },
    "data": {
      "url": "https://raw.githubusercontent.com/yantoniassi1/yantoniassi1.github.io/main/PortfolioData/cc10_db_vac_map.geojson",
      "format": {
        "type": "json",
        "property": "features"
      }
    },
    "mark": {
      "type": "geoshape",
      "stroke": "white",
      "strokeWidth": 0.5
    },
    "encoding": {
      "color": {
        "field": "properties.cob_vac_bcg",
        "type": "quantitative",
        "title": "BCG Vaccination Rate (%)",
        "scale": {
          "scheme": "blues",
          "domain": [0, 100]
        }
      },
      "tooltip": [
        {"field": "properties.NM_UF", "type": "nominal", "title": "State"},
        {"field": "properties.cob_vac_bcg", "type": "quantitative", "title": "BCG Coverage (%)"}
      ]
    },
    "config": {
      "view": {
        "stroke": "transparent"
      },
      "legend": {
        "titleFontSize": 12,
        "labelFontSize": 10
      }
    }
  }
  