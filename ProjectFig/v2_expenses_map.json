{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Health Expenditure Per Capita by State in Brazil (2010-2023)",
    "anchor": "start",
    "subtitle": ["Data Source: Your Dataset"],
    "fontSize": 16,
    "subtitleFontSize": 12,
    "fontWeight": "bold"
  },
  "width": 500,
  "height": 500,
  "projection": {
    "type": "mercator"
  },
  "params": [
    {
      "name": "year",
      "value": 2010,
      "bind": {
        "input": "range",
        "min": 2010,
        "max": 2023,
        "step": 1,
        "name": "Select Year:"
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/yantoniassi1/yantoniassi1.github.io/main/ProjectData/yearly_hexp_UF.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "lookup": "CD_UF",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/yantoniassi1/yantoniassi1.github.io/main/ProjectData/hexp_UF_unique.geojson",
          "format": {"type": "json", "property": "features"}
        },
        "key": "properties.CD_UF",
        "fields": ["type", "properties", "geometry"]
      }
    },
    {
      "filter": "datum.year == year"
    }
  ],
  "mark": {
    "type": "geoshape",
    "stroke": "white",
    "strokeWidth": 0.5
  },
  "encoding": {
    "color": {
      "field": "desp_tot_saude_pc_mun",
      "type": "quantitative",
      "title": "Health Expenditure (per capita)",
      "scale": {"scheme": "blues"}
    },
    "tooltip": [
      {"field": "properties.NM_UF", "type": "nominal", "title": "State"},
      {
        "field": "desp_tot_saude_pc_mun",
        "type": "quantitative",
        "title": "Expenditure (R$)",
        "format": ".2f"
      }
    ]
  },
  "config": {
    "view": {"stroke": "transparent"},
    "legend": {
      "titleFontSize": 12,
      "labelFontSize": 10
    }
  }
}

