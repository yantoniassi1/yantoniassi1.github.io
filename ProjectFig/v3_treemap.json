{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Treemap visualization of Total Expenses per Subarea",
  "data": [
    {
      "name": "expenses",
      "url": "https://raw.githubusercontent.com/yantoniassi1/yantoniassi1.github.io/main/ProjectData/exp_subarea_total_2023.csv",
      "format": {
        "type": "csv"
      },
      "transform": [
          {
            "type": "aggregate",
            "groupby": ["Group", "Subarea"],
            "fields": ["Value"],
            "ops": ["sum"],
            "as": ["TotalValue"]
          },
          {
            "type": "nest",
            "keys": ["Group", "Subarea"]
          }
      ]
    }
  ],
  "scales": [
    {
      "name": "colorScale",
      "type": "ordinal",
      "domain": {"data": "expenses", "field": "Group"},
      "range": {"scheme": "category10"}
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {"data": "expenses"},
      "encode": {
        "enter": {
          "x": {"field": "x0", "scale": "x"},
          "y": {"field": "y0", "scale": "y"},
          "x2": {"field": "x1", "scale": "x"},
          "y2": {"field": "y1", "scale": "y"},
          "fill": {"scale": "colorScale", "field": "Group"}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "expenses"},
      "encode": {
        "enter": {
          "x": {"field": "x0", "scale": "x", "offset": 5},
          "y": {"field": "y0", "scale": "y", "offset": 5},
          "text": {"field": "Subarea"},
          "fontSize": {"value": 12},
          "fill": {"value": "black"}
        }
      }
    }
  ],
  "layout": {
    "padding": 10,
    "bounds": "full"
  }
}



